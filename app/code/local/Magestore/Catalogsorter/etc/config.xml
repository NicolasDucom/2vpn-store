<?xml version="1.0"?>
<config>
    <modules>
        <Magestore_Catalogsorter>
            <version>0.1.1</version>
        </Magestore_Catalogsorter>
    </modules>
    <adminhtml>
		<acl>
			<resources>
				<all>
					<title>Allow Everything</title>
				</all>
				<admin>
					<children>
						<system>
							<children>
								<config>
									<children>
										<catalogsorter module="catalogsorter">
											<title>Catalog Sorter</title>
											<sort_order>71</sort_order>               
										</catalogsorter>			
									</children>
								</config>
							</children>
						</system>
					</children>
				</admin>
			</resources>
		</acl>
    </adminhtml>   
    <global>
        <models>
            <catalogsorter>
                <class>Magestore_Catalogsorter_Model</class>
                <resourceModel>catalogsorter_mysql4</resourceModel>
            </catalogsorter>
            <catalogsorter_mysql4>
                <class>Magestore_Catalogsorter_Model_Mysql4</class>
            </catalogsorter_mysql4>
			<catalog>
				<rewrite>
					<config>Magestore_Catalogsorter_Model_Rewrite_CatalogConfig</config>
					<layer>Magestore_Catalogsorter_Model_Rewrite_CatalogLayer</layer>
				</rewrite>
			</catalog>
        </models>
        <blocks>
            <catalogsorter>
                <class>Magestore_Catalogsorter_Block</class>
            </catalogsorter>
			<catalog>
				<rewrite>
					<product_list_toolbar>Magestore_Catalogsorter_Block_Rewrite_CatalogProductListToolbar</product_list_toolbar>
				</rewrite>
			</catalog>			
        </blocks>
        <helpers>
            <catalogsorter>
                <class>Magestore_Catalogsorter_Helper</class>
            </catalogsorter>
        </helpers>
    </global>
</config>